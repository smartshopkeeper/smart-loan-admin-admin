<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:clickable="true"
                android:focusable="true"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/txt_customer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:text="Customer Name:"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/txt_customer_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:text="Id:"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/txt_approved_loan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:text="Approved Loan:"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/txtapprovedloanvalue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:text="C Name:"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/txt_disbussloan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:text="Disbussed Loan: "
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/txt_txt_disbussloan_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:text="Bank:"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/txt_commission"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:text="Commission: "
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/txt_txt_commission_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:text="Commission"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_approve"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"
                            app:cardElevation="5dp"
                            card_view:cardCornerRadius="4dp">

                            <TextView
                                android:id="@+id/textview_user_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Approve"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_reject"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:padding="10dp"
                            app:cardElevation="5dp"
                            card_view:cardCornerRadius="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="Reject"
                                android:textColor="@color/whitetextcolor"
                                android:textSize="14dp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>