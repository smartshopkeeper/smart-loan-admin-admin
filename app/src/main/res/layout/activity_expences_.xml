<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activites.Expences_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_expence"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/hederbackground"
        app:popupTheme="@style/AppTheme.PopupOverlay" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:padding="5dp">

                <Spinner
                    android:id="@+id/employee_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginTop="24.0dip"
                    android:background="@drawable/edittextanimation"
                    android:padding="7.0dip"
                    android:text=""
                    android:textColor="@color/mainTextColor"
                    android:textSize="14.0dip"
                    android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/agentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginBottom="3dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/employee_salary_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_toRightOf="@id/txtcontatct"
                    android:layout_weight="25"
                    android:background="@drawable/edittextanimation"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10.0dip"
                    android:text=""
                    android:textColor="@color/mainTextColor"
                    android:textSize="14.0dip"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="40"
                    android:text="PAY"
                    style="@style/DefaultButton"
                    android:layout_margin="3dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/travelling_allowence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="35"
                    android:text="TRAVELLING ALLOWENCE"
                    android:textColor="@color/background"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/travelling_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_toRightOf="@id/txtcontatct"
                    android:layout_weight="25"
                    android:background="@drawable/edittextanimation"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10.0dip"
                    android:text=""
                    android:textColor="@color/mainTextColor"
                    android:textSize="14.0dip" />

                <Button
                    android:id="@+id/btn_travel_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="40"
                    android:text="PAY"
                    style="@style/DefaultButton"
                    android:layout_margin="3dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/rent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="35"
                    android:text="RENT"
                    android:textColor="@color/background"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/rent_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_toRightOf="@id/txtcontatct"
                    android:layout_weight="25"
                    android:background="@drawable/edittextanimation"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10.0dip"
                    android:text=""
                    android:textColor="@color/mainTextColor"
                    android:textSize="14.0dip" />

                <Button
                    android:id="@+id/btn_rent_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="40"
                    android:text="PAY"
                    style="@style/DefaultButton"
                    android:layout_margin="3dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/light_bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="35"
                    android:text="Light BILL"
                    android:textColor="@color/background"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/light_bill_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_toRightOf="@id/txtcontatct"
                    android:layout_weight="25"
                    android:background="@drawable/edittextanimation"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10.0dip"
                    android:text=""
                    android:textColor="@color/mainTextColor"
                    android:textSize="14.0dip" />

                <Button
                    android:id="@+id/btn_light_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="40"
                    android:text="PAY"
                    style="@style/DefaultButton"
                    android:layout_margin="3dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="35"
                    android:text="OTHER"
                    android:textColor="@color/background"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/other_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_toRightOf="@id/txtcontatct"
                    android:layout_weight="25"
                    android:background="@drawable/edittextanimation"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10.0dip"
                    android:text=""
                    android:textColor="@color/mainTextColor"
                    android:textSize="14.0dip" />

                <Button
                    android:id="@+id/btn_other_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="40"
                    android:text="PAY"
                    style="@style/DefaultButton"
                    android:layout_margin="3dp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


</LinearLayout>