<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="7dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="70"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice Id:"
                    android:textColor="@color/darkgraycolor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtcname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C Name:"
                    android:textColor="@color/darkgraycolor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtbank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank:"
                    android:textColor="@color/darkgraycolor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtcommision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commission:"
                    android:textColor="@color/darkgraycolor"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/txt_Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/darkgraycolor"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtidvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Id:"
                    android:textColor="@color/whitetextcolor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtcnamevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C Name:"
                    android:textColor="@color/whitetextcolor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtbankvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank:"
                    android:textColor="@color/whitetextcolor"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtcommisionvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25000"
                    android:textColor="@color/whitetextcolor"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/txt_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sent"
                    android:textColor="@color/whitetextcolor"
                    android:textSize="14dp" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>