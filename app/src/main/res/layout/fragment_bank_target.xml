<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/layoutdetails"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:background="@drawable/view_dropshadow"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="80">

            <TextView
                android:id="@+id/txtBankname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:textColor="@color/darkgraycolor"
                android:gravity="center"
                android:layout_weight="20"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/graycolor"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:id="@+id/txtsettarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target"
                android:textColor="@color/darkgraycolor"
                android:gravity="center"
                android:layout_weight="20"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/graycolor"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:id="@+id/txtloggedamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="logged amount"
                android:textColor="@color/darkgraycolor"
                android:gravity="center"
                android:layout_weight="20"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/graycolor"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:id="@+id/txtbalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="@color/darkgraycolor"
                android:gravity="center"
                android:layout_weight="20"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graycolor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_agents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="3dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>




