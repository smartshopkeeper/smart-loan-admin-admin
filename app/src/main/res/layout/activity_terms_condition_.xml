<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arjunsk.drawer_activity.Fragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="100">

        <ScrollView
            android:id="@+id/scrollviewrightleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="90">

            <RelativeLayout
                android:id="@+id/scrolllayout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/layoutmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:id="@+id/layouttexttamdc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txttandc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="Terms And Conditions"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="18sp"
                            android:textStyle="normal|bold"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutleadfields"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layouttexttamdc"
                        android:layout_marginLeft="30sp"
                        android:layout_marginRight="30sp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/txtfetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="dummy text dummy text dummy text dummy text dummy text dummy
                             text dummy text dummy text dummy text dummy text dummy text dummy text dummy text
                             dummy text dummy text dummy text dummy text dummy text dummy text dummy text dummy text
                             dummy text dummy text dummy text dummy text dummy text dummy text dummy text dummy text dummy
                              text dummy text dummy text dummy text dummy text dummy text dummy text dummy text dummy text
                              dummy text dummy textdummy text dummy text dummy text dummy text dummy text dummy text dummy
                              text dummy text dummy text dummy text dummy text dummy text dummy text dummy text
                               dummy text dummy text dummy text dummy text dummy text dummy
                               text dummy text dummy text dummy text dummy textdummy
                         text dummy text dummy text dummy text"
                            android:textColor="@color/whitetextcolor"
                            android:textSize="12sp"
                           />

                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/layoutbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0sp"
            android:layout_weight="10"
            android:layout_below="@+id/scrollviewrightleft"
            android:layout_margin="10dp"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/buttonaccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_dropshadow2"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="5sp"
                android:text="ACCEPT"
                android:textColor="@color/darkgraycolor"
                android:textSize="15sp"
                android:textStyle="normal|bold"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
